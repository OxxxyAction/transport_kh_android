<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/current_marshrut_background">

        <TextView
            android:id="@+id/txtView_df_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="23sp"
            android:textColor="@color/md_white_1000"
            />

        <TextView
            android:id="@+id/txtView_df_cost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="23sp"
            android:textColor="@color/btn_default"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_back_info"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:src="@drawable/road_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:padding="5dp">
                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/txtView_df_start_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:textSize="19sp"
                    android:text=""/>
                <TextView
                    android:id="@+id/txtView_df_end_point"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/md_white_1000"
                    android:textSize="19sp"
                    android:text=""/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:textSize="19sp"
                    android:text=""/>
                <TextView
                    android:id="@+id/txtView_df_count"
                    android:gravity="bottom|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/md_white_1000"
                    android:textSize="19sp"
                    android:text="dasdasd"/>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/txtView_df_show_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:clickable="true"
            android:textColor="@color/md_white_1000"
            android:text="@string/show_route"/>

        <Button
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/schedule"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/btn_selector"
            android:id="@+id/btn_log_in" />
    </LinearLayout>

</LinearLayout>